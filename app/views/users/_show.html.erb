<h2>User info</h2>
<div>
 <%= image_tag user.get_profile_image(70,70) %>
</div>

<table class="table">
  <tbody>
    <tr>
    <th>name</th>
    <td><%= user.name %></td>
    </tr>
    <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>

  </tbody>
</table>

<% if user == current_user %>
    <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary form-control' do %>
<i class="fas fa-user-cog"></i>
<% end %>
  <% end %>

<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
    <div class="form-group">
    <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
    <% end %>