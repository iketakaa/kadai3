 <div class= "container">
  <div class= "row">
    <div class= "col-md-3">
<%= render 'users/show', user: current_user %>
    </div>

  <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>

<table class= "table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @user.each do |user| %>
    <tr>
      <td>
        <!--<%#= image_tag user.get_profile_image(100,100) %>-->
      <% if user.profile_image.attached? %>
        <%= image_tag user.profile_image.variant(resize_to_limit: [100, 100]) %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "100x100" %>
      <% end %>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user) %></td>
    </tr>
    <% end %>
  </tbody>

  </table>


</div>
</div>
</div>